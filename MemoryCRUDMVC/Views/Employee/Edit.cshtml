<div class="container mt-5">
    <h2 class="text-center text-warning">Edit Employee</h2>
    
    <div class="card shadow-lg p-4">
        <form method="post" asp-action="Edit">
            <input type="hidden" asp-for="Id">

            <div class="mb-3">
                <label class="form-label">Employee Name</label>
                <input type="text" asp-for="Name" class="form-control" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Position</label>
                <input type="text" asp-for="Position" class="form-control" required>
            </div>

            <button type="submit" class="btn btn-warning w-100">
                <i class="fas fa-edit"></i> Update Employee
            </button>
        </form>
    </div>

    <div class="text-center mt-3">
        <a href="/Employee/Employees" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>
